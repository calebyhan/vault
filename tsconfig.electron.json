{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist/electron",
    "types": ["node"]
  },
  "include": ["electron/**/*", "src/lib/**/*", "src/db/**/*"],
  "exclude": ["node_modules", "src/app", "src/components", "out", ".next"]
}
